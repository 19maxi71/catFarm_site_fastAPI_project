    <!-- Request Details Modal -->
    <div class="modal fade" id="requestModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-user me-2"></i>Adoption Request Details
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="requestDetails">
                    <!-- Request details will be loaded here -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-action" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Close
                    </button>
                    <button type="button" class="btn btn-danger btn-action" id="rejectBtn">
                        <i class="fas fa-times me-1"></i>Reject
                    </button>
                    <button type="button" class="btn btn-success btn-action" id="approveBtn">
                        <i class="fas fa-check me-1"></i>Approve
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let allRequests = [];
        let currentRequestId = null;

        // Load requests on page load
        document.addEventListener('DOMContentLoaded', loadRequests);

        // Filter functionality
        document.getElementById('statusFilter').addEventListener('change', filterRequests);

        async function loadRequests() {
            try {
                const response = await fetch('/api/adoption/requests/');
                if (!response.ok) {
                    throw new Error('Failed to load requests');
                }
                allRequests = await response.json();
                updateStats();
                displayRequests(allRequests);
            } catch (error) {
                console.error('Error loading requests:', error);
                document.getElementById('requestsContainer').innerHTML = `
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Failed to load adoption requests. Please try refreshing the page.
                    </div>
                `;
            }
        }

        function updateStats() {
            const total = allRequests.length;
            const pending = allRequests.filter(r => r.status === 'pending').length;
            const approved = allRequests.filter(r => r.status === 'approved').length;
            const rejected = allRequests.filter(r => r.status === 'rejected').length;

            document.getElementById('totalRequests').textContent = total;
            document.getElementById('pendingRequests').textContent = pending;
            document.getElementById('approvedRequests').textContent = approved;
            document.getElementById('rejectedRequests').textContent = rejected;
        }

        function filterRequests() {
            const filter = document.getElementById('statusFilter').value;
            const filtered = filter === 'all' ? allRequests : allRequests.filter(r => r.status === filter);
            displayRequests(filtered);
        }

        function displayRequests(requests) {
            const container = document.getElementById('requestsContainer');

            if (requests.length === 0) {
                container.innerHTML = `
                    <div class="card request-card">
                        <div class="card-body text-center py-5">
                            <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No adoption requests found</h5>
                            <p class="text-muted">There are no requests matching your current filter.</p>
                        </div>
                    </div>
                `;
                return;
            }

            const html = requests.map(request => `
                <div class="card request-card mb-3">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-4">
                                <h6 class="mb-1 fw-bold">${request.customer_name}</h6>
                                <p class="mb-1 text-muted small">
                                    <i class="fas fa-envelope me-1"></i>${request.customer_email}
                                </p>
                                ${request.phone ? `
                                    <p class="mb-0 text-muted small">
                                        <i class="fas fa-phone me-1"></i>${request.phone}
                                    </p>
                                ` : ''}
                            </div>
                            <div class="col-md-3">
                                <div class="mb-2">
                                    <span class="badge ${getStatusBadgeClass(request.status)} status-badge">
                                        ${request.status.charAt(0).toUpperCase() + request.status.slice(1)}
                                    </span>
                                </div>
                                <div class="text-muted small">
                                    <i class="fas fa-calendar me-1"></i>
                                    ${new Date(request.submitted_at).toLocaleDateString()}
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="fw-semibold text-primary">
                                    <i class="fas fa-tag me-1"></i>Litter: ${request.litter_code || 'Not specified'}
                                </div>
                            </div>
                            <div class="col-md-2 text-end">
                                <button onclick="viewRequest(${request.id})" class="btn btn-outline-primary btn-action btn-sm">
                                    <i class="fas fa-eye me-1"></i>View Details
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            `).join('');

            container.innerHTML = html;
        }

        function getStatusBadgeClass(status) {
            switch (status) {
                case 'pending': return 'bg-warning text-dark';
                case 'approved': return 'bg-success';
                case 'rejected': return 'bg-danger';
                default: return 'bg-secondary';
            }
        }

        async function viewRequest(requestId) {
            currentRequestId = requestId;
            const modal = new bootstrap.Modal(document.getElementById('requestModal'));
            modal.show();

            try {
                const response = await fetch(`/api/adoption/requests/${requestId}`);
                if (!response.ok) {
                    throw new Error('Failed to load request details');
                }
                const request = await response.json();
                displayRequestDetails(request);
            } catch (error) {
                console.error('Error loading request details:', error);
                document.getElementById('requestDetails').innerHTML = `
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Failed to load request details. Please try again.
                    </div>
                `;
            }
        }

        function displayRequestDetails(request) {
            const answers = JSON.parse(request.custom_answers || '{}');

            const detailsHTML = `
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="fw-bold mb-3">
                            <i class="fas fa-user-circle me-2 text-primary"></i>Contact Information
                        </h6>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Name</label>
                            <p class="mb-1">${request.customer_name}</p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Email</label>
                            <p class="mb-1">${request.customer_email}</p>
                        </div>
                        ${request.phone ? `
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Phone</label>
                                <p class="mb-1">${request.phone}</p>
                            </div>
                        ` : ''}
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Litter Code</label>
                            <p class="mb-1">${request.litter_code || 'Not specified'}</p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Submitted</label>
                            <p class="mb-1">${new Date(request.submitted_at).toLocaleString()}</p>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Status</label>
                            <p class="mb-1">
                                <span class="badge ${getStatusBadgeClass(request.status)} status-badge">
                                    ${request.status.charAt(0).toUpperCase() + request.status.slice(1)}
                                </span>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h6 class="fw-bold mb-3">
                            <i class="fas fa-question-circle me-2 text-info"></i>Application Answers
                        </h6>
                        ${Object.keys(answers).length > 0 ? Object.entries(answers).map(([key, value]) => `
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Question ${key.replace('question_', '')}</label>
                                <p class="mb-1">${value}</p>
                            </div>
                        `).join('') : '<p class="text-muted">No custom answers provided.</p>'}
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-12">
                        <h6 class="fw-bold mb-3">
                            <i class="fas fa-file-contract me-2 text-success"></i>Legal Agreements
                        </h6>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" disabled ${request.terms_agreed ? 'checked' : ''}>
                                    <label class="form-check-label">
                                        Terms & Conditions
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" disabled ${request.privacy_consent ? 'checked' : ''}>
                                    <label class="form-check-label">
                                        Privacy Policy
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" disabled ${request.subscription ? 'checked' : ''}>
                                    <label class="form-check-label">
                                        Newsletter Subscription
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            `;

            document.getElementById('requestDetails').innerHTML = detailsHTML;

            // Update button states
            const approveBtn = document.getElementById('approveBtn');
            const rejectBtn = document.getElementById('rejectBtn');

            if (request.status === 'approved') {
                approveBtn.disabled = true;
                approveBtn.innerHTML = '<i class="fas fa-check me-1"></i>Already Approved';
                rejectBtn.disabled = true;
                rejectBtn.innerHTML = '<i class="fas fa-ban me-1"></i>Cannot Reject';
            } else if (request.status === 'rejected') {
                approveBtn.disabled = true;
                approveBtn.innerHTML = '<i class="fas fa-ban me-1"></i>Cannot Approve';
                rejectBtn.disabled = true;
                rejectBtn.innerHTML = '<i class="fas fa-times me-1"></i>Already Rejected';
            } else {
                approveBtn.disabled = false;
                approveBtn.innerHTML = '<i class="fas fa-check me-1"></i>Approve';
                rejectBtn.disabled = false;
                rejectBtn.innerHTML = '<i class="fas fa-times me-1"></i>Reject';
            }

            // Add event listeners
            approveBtn.onclick = () => updateRequestStatus(requestId, 'approved');
            rejectBtn.onclick = () => updateRequestStatus(requestId, 'rejected');
        }

        async function updateRequestStatus(requestId, status) {
            try {
                const response = await fetch(`/api/adoption/requests/${requestId}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ status: status })
                });

                if (!response.ok) {
                    throw new Error('Failed to update request status');
                }

                // Close modal and reload requests
                bootstrap.Modal.getInstance(document.getElementById('requestModal')).hide();
                await loadRequests();

                // Show success message
                showAlert(`Request ${status} successfully!`, 'success');
            } catch (error) {
                console.error('Error updating request status:', error);
                showAlert('Failed to update request status. Please try again.', 'danger');
            }
        }

        function showAlert(message, type) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
            alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;

            document.body.appendChild(alertDiv);

            // Auto remove after 5 seconds
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.remove();
                }
            }, 5000);
        }
    </script>
</body>
</html>

